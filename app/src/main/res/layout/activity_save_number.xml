<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".SaveNumberActivity">

    <!-- Título -->

    <!-- Ícone da Aplicação -->

    <!-- Texto para Número Ativo -->

    <!-- RecyclerView para listar os números cadastrados -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="411dp"
        android:layout_height="527dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/rounded_bg" />

    <TextView
        android:id="@+id/textoAddNumber"
        android:layout_width="259dp"
        android:layout_height="47dp"
        android:fontFamily="@font/poppins_light"
        android:text="Adicione um Número De Emergencia (Max. 5)"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <TextView
        android:id="@+id/textoAddVoz"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_light"
        android:text="Adicione um Comando de voz"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:background="@drawable/input_style"
        android:drawableTint="#FAFAFA"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="Exemplo: (99) 9999-9999"
        android:inputType="phone"
        android:paddingStart="12dp"
        android:textColorHint="@color/hintColor"
        android:textSize="15dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_bold"
        android:text="Salvar"
        android:textSize="16dp"
        android:textColor="#ebf4f6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btnSaveKeyword"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_bold"
        android:text="Salvar"
        android:textSize="16dp"
        android:textColor="#ebf4f6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="81dp"
        android:layout_marginBottom="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"

        app:srcCompat="@drawable/logoapp" />

    <TextView
        android:id="@+id/textNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:text="Número ativo: Nenhum"
        android:textColor="#433878"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNumbers"
        android:layout_width="368dp"
        android:layout_height="208dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_op"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_light"
        android:overScrollMode="never"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:textColor="#433878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />

    <EditText
        android:id="@+id/editTextKeyword"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:background="@drawable/input_style"
        android:fontFamily="@font/poppins_light"
        android:hint="Exemplo: Ajuda, Socorro"
        android:inputType="text"
        android:maxLength="20"
        android:paddingStart="12dp"
        android:textColorHint="@color/hintColor"
        android:textSize="15dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <TextView
        android:id="@+id/textViewActiveKeyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_light"
        android:maxLines="1"
        android:text="Ativo:"
        android:textColor="#433878"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextKeyword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextKeyword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/btn_voltar" />


</androidx.constraintlayout.widget.ConstraintLayout>
